{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020", // Update this to 'es2020' or another compatible module
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

//    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
//    "strict": true,
//    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
